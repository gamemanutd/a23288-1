<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/logo"
        app:civ_border_width="1dp"
        app:civ_border_color="#000000"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/username"
        android:text="USERNAME"
        android:gravity="center"
        android:background="@drawable/round_color"
        android:textColor="#32c8d7"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:id="@+id/edit_user"
        android:background="@drawable/round"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/edit_user"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/password"
        android:text="PASSWORD"
        android:gravity="center"
        android:background="@drawable/round_color"
        android:textColor="#32c8d7"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:id="@+id/edit_pass"
        android:background="@drawable/round"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_pass"
        android:gravity="center_horizontal"
        android:id="@+id/latlong"
        android:layout_marginTop="10dp"

        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Latitude"
            android:gravity="center"
            android:background="@drawable/round_color"
            android:textColor="#32c8d7"
            android:id="@+id/Lati"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Longtitude"
            android:gravity="center"
            android:background="@drawable/round_color"
            android:textColor="#32c8d7"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/latlong"
        android:id="@+id/edit_latlong"
        >
        <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/round"
            android:id="@+id/edit_lat"
            android:inputType="numberDecimal"
            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/round"
            android:layout_marginLeft="10dp"
            android:id="@+id/edit_long"
            android:inputType="numberDecimal"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/edit_latlong"
        android:gravity="center_horizontal"
        android:id="@+id/signBtn"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Random by clicking"
            android:background="@drawable/round"
            android:textAllCaps="false"
            android:backgroundTint="#32c8d7"
            android:textColor="#ffffff"
            android:onClick="randomBtn"
            android:id="@+id/rndBtn"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="Add new user"
            android:background="@drawable/round"
            android:backgroundTint="#32c8d7"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:onClick="SignUpData"
            android:id="@+id/adduserBtn"
            />
    </LinearLayout>

</RelativeLayout>